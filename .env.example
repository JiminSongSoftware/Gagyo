# Environment Configuration
# Copy this file to .env and fill in your actual values.
# NEVER commit .env to version control.

# ============================================
# APPLICATION ENVIRONMENT
# ============================================

# Environment: 'development' | 'preview' | 'production'
EXPO_PUBLIC_ENV=development

# ============================================
# SUPABASE CONFIGURATION
# ============================================

# Supabase Project URL
EXPO_PUBLIC_SUPABASE_URL=YOUR_SUPABASE_PROJECT_URL

# Supabase Anon Key (public, safe for client)
EXPO_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# Supabase Service Role Key (secret, server-side only)
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY

# ============================================
# SENTRY CONFIGURATION
# ============================================

# Sentry DSN for error tracking
# Get this from your Sentry project settings
# Format: https://examplePublicKey@o0.ingest.sentry.io/PROJECT_ID
EXPO_PUBLIC_SENTRY_DSN=YOUR_SENTRY_DSN

# Sentry Auth Token (for uploads)
# Required for sourcemap uploads and releases
SENTRY_AUTH_TOKEN=YOUR_SENTRY_AUTH_TOKEN

# Sentry Organization (optional, for CLI commands)
SENTRY_ORG=YOUR_SENTRY_ORG

# Sentry Project (optional, for CLI commands)
SENTRY_PROJECT=YOUR_SENTRY_PROJECT

# ============================================
# POSTHOG CONFIGURATION
# ============================================

# PostHog API Key for product analytics
# Get this from your PostHog project settings
EXPO_PUBLIC_POSTHOG_KEY=YOUR_POSTHOG_KEY

# PostHog Host (default: https://app.posthog.com)
# Only change if using a self-hosted instance
EXPO_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ============================================
# PUSH NOTIFICATIONS
# ============================================

# Expo Push Notifications (APNs) Key ID
EXPO_PUBLIC_APNS_KEY_ID=YOUR_APNS_KEY_ID

# Expo Push Notifications (APNs) Team ID
EXPO_PUBLIC_APNS_TEAM_ID=YOUR_APNS_TEAM_ID

# VAPID Private Key for web push (optional)
VAPID_PRIVATE_KEY=YOUR_VAPID_PRIVATE_KEY

# ============================================
# EAS CONFIGURATION
# ============================================

# EAS Project ID
EXPO_PROJECT_ID=YOUR_EAS_PROJECT_ID

# EAS Build ID (injected at build time)
# EXPO_PUBLIC_EAS_BUILD_ID is set automatically by EAS
